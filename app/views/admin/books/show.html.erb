
<div class="container py-5">
  <h2>絵本の詳細</h2>
    <div class="row justify-content-center">
      <%= image_tag @book.get_book_image(300, 250) %>
    	<table class='table'>
  		  <tr>
  		    <td>絵本の名前</td>
          <td><%= @book.name %></td>
        </tr>
        <tr>
          <td>あらすじ</td>
          <td><%= simple_format(@book.description) %></td>
        </tr>
        <tr>
          <td>カテゴリ</td>
          <td>
              <% @book.categories.each do |category| %>
                <%= category.name %> &emsp; <!-- カテゴリ名とスペースを追加 -->
              <% end %>
          </td>
        </tr>
      </table>
    </div>
    <div class="row justify-content-center">
      <%= link_to '編集する', edit_admin_book_path(@book), class: "btn btn-dark px-4" %>
    </div>
</div>
