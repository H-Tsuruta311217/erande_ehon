<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-5"><%= "#{ @member.last_name }#{ @member.first_name }さんの会員情報編集" %></h3>
      <%= render 'layouts/error', obj: @member %>
      <%= form_with model:@member, url: admin_member_path do |f| %>

        <table class="table table-borderless">
          <tr>
            <td>会員ID</td>
            <td><%= @member.id %></td> <!--@memberはform_withで指定されてないからインスタンス変数のまま-->
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, autofocus: true %>&ensp;<%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td>ニックネーム</td>
            <td><%= f.text_field :nickname %>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
            <td></td>
          </tr>

          <tr>
            <td>自己紹介</td>
            <td><%= f.text_area :introduction , :size => "60x10" %></td>
            <td></td>
          </tr>

          <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active_false, "退会" %>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active_true, "有効" %>
              </td>
            </tr>
          <tr>
            <td><%= f.submit "変更を保存",class: "btn btn-dark" %></td>
          </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
