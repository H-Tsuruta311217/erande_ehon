<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="my-5"><span><%= "#{@member.last_name}#{@member.first_name}さんの会員情報編集" %></span></h1>

        <%= form_with model:@member, local:true do |f| %>
        <%= render 'layouts/error', obj: @member %>
          <table class="table table-borderless">
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name, autofocus: true %>&ensp;<%= f.text_field :first_name %></td>
            </tr>

            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :nickname %>
            </tr>

            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
              <td></td>
            </tr>

            <tr>
              <td>自己紹介</td>
              <td><%= f.text_area :introduction , :size => "60x10" %></td>
              <td></td>
            </tr>

            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active_false, "退会" %>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active_true, "有効" %>
              </td>
            </tr>

            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class:"btn btn-dark" %></td>
            </tr>
          </table>
        <% end %>
    </div>
  </div>
</div>