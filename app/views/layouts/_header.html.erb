<header style="background-color: #F5A9A9;">
  <div class="container-fluid">
    <div class="row mx-auto">
      <div class="col-3">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', style: "object-fit: cover; width: 150px; height: 80px;" %>
        <% end %>
      </div>
      <div class="col-3 mt-3 text-right">
        <% if member_signed_in?%>
          <p><%= "ようこそ、#{current_member.last_name}#{current_member.first_name}さん！" %></p>
        <% end %>
      </div>
      <div class="col-6">
        <ul class="row justify-content-end my-2 list-unstyled">
          <% if member_signed_in? %>
            <li class="nav-item mx-2 mt-2">
              <i class="fa-regular fa-user"></i>
              <%= link_to "マイページ", member_path(id: current_member.id), class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>

            <li class="nav-item mx-2 mt-2">
              <%= link_to '投稿フォーム', new_book_path %>
            </li>

            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-cake-candles"></i>
              <%= link_to "絵本一覧", books_path, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>

            <li class="nav-item mx-2 mt-2">
              <%= link_to "ログアウト", destroy_member_session_path, method: :delete %>
            </li>

          <% elsif admin_signed_in? %>

            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-cake-candles"></i>
              <%= link_to "絵本一覧", admin_books_path, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>

            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-users"></i>
              <%= link_to "会員一覧", admin_members_path, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>

            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-cookie-bite"></i>
              <%= link_to "カテゴリ一覧", admin_categories_path, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>

            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-right-from-bracket"></i>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>

          <% else %>
            <li class="nav-item mx-2 mt-2">
              <%= link_to "新規登録", new_member_registration_path %>
            </li>

            <li class="nav-item mx-2 mt-2">
              <%= link_to "ログイン", new_member_session_path %>
            </li>
          <% end %>
        </ul>
      <%= render 'layouts/search' %>
      </div>
    </div>
  </div>
</header>
