<div class="container">
  <div class='row'>
    <table class="table border table-hover table-inverse">
      <% if @result == [] %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% elsif @book.present? %>
      <% search_word = @q.name_cont %>
    <h2 class="mt-3">検索結果 "<%= search_word %>"</h2>
      <thead>
        <tr>
          <th>表紙</th>
          <th>絵本の名前</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @book.each do |f| %>
          <td><%= image_tag f.get_book_image(200,200), class: "image" %></td>
          <td><%= link_to f.name, book_path(f.id) %></td>
        </tr>
        <% end %>
      <% else %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% end %>
    </table>
  </div>
</div>