<table class="table table-hover table-inverse">
    <!--検索対象モデルがBookの時 -->
    <thead>
      <tr>
        <th>タイトル</th>
        <th>あらすじ</th>
      </tr>
    </thead>
    <tbody>
      <h2>Books search for "<%= @word %>"</h2>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title , book_path(book.id) %></td>
          <td><%= book.item_caption %></td>
        </tr>
      <% end %>
    </tbody>
</table>
