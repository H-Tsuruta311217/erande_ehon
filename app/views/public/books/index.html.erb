<div class="container p-3">
  <div class="row">

    <div class="col-10">
      <div class="row">
        <h3>絵本一覧</h3>

      </div>
      <div class="d-flex flex-wrap">
        <% @books.each do |book| %>
          <div class="mx-2 mb-4">
            <%= link_to book_path(book.id) do %>
              <%= image_tag book.image_url, style: "object-fit: cover; width: 180px; height: 120px;" %>
            <% end %>
            <p>絵本の名前：<%= book.title %></p>
            <p>あらすじ：<%= book.item_caption %></p>
            <p><%= link_to "#{book.post_comments.count} コメント", book_path(book.id) %></p>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
