<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>絵本の詳細</h2>

    		<table class='table'>
    		  <tr>
    		    <%= image_tag @book.get_book_image(300, 250), style: "object-fit: cover; width: 450px; height: 300px;" %>
            <td><%= @book.name %></td>
            <td><%= @book.description %></td>
            <td>
              <ul>
                <% @book.categories.each do |category| %>
                  <li><%= category.name %></li>
                <% end %>
              </ul>
            </td>
            <td><%= render'public/favorites/favorite', book: @book %></td>
          </tr>
        </table>
        <p>コメント件数：<span id="comment_count"><%= @book.post_comments.count %></span></p>
        <div id="comment_index">
          <%= render "public/post_comments/index", book: @book %>
        </div>

        <div id="comment-form">
          <%= render "public/post_comments/form", book: @book, post_comment: @post_comment %>
        </div>
    </div>
  </div>
</div>